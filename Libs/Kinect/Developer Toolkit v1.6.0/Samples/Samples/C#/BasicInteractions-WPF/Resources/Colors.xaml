<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="DefaultColor">#52318F</Color>
    <Color x:Key="SelectedColor">#00BCF2</Color>
    <Color x:Key="DisabledColor">#D2D2D2</Color>
    <Color x:Key="InactiveScrollRegionColor">#EBEBEC</Color>
    <Color x:Key="ActiveScrollRegionColor">#DCDDDE</Color>
    <Color x:Key="MediumGrey">#969696</Color>
    <Color x:Key="TextColor">White</Color>
    <Color x:Key="StoryTextColor">Black</Color>

    <SolidColorBrush x:Key="DefaultColorBrush" Color="{StaticResource DefaultColor}" />
    <SolidColorBrush x:Key="SelectedColorBrush" Color="{StaticResource SelectedColor}" />
    <SolidColorBrush x:Key="DisabledColorBrush" Color="{StaticResource DisabledColor}" />
    <SolidColorBrush x:Key="ActiveScrollRegionBrush" Color="{StaticResource ActiveScrollRegionColor}" />
    <SolidColorBrush x:Key="InactiveScrollRegionBrush" Color="{StaticResource InactiveScrollRegionColor}" />
    <SolidColorBrush x:Key="MediumGreyBrush" Color="{StaticResource MediumGrey}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="StoryTextBrush" Color="{StaticResource StoryTextColor}" />
</ResourceDictionary>